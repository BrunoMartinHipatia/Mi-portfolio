<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondoSettings"
    android:id="@+id/rootview"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardSettings"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textPin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/textoSettings"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/cardSettings"
                android:text="@string/introduce_el_pin"></TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/cardSettings"
            >


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="30dp"
                android:inputType="numberPassword"

                ></EditText>
            <EditText
                android:visibility="gone"
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="30dp"
                android:inputType="numberPassword"

                ></EditText>

            <EditText
                android:visibility="gone"
                android:id="@+id/password3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="30dp"
                android:inputType="numberPassword"

                ></EditText>

            <Button
                android:id="@+id/buttonpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="@string/enviar"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>