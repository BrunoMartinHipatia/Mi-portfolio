<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaperdifu"

    >

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/pin"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/texto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:textSize="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <GridLayout
            android:id="@+id/pin"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:orientation="horizontal"
            android:layout_margin="20dp"

            >


            <TextView
                android:id="@+id/numero"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="1"

                android:textColor="@color/white"
                android:textSize="50dp">


            </TextView>

            <TextView
                android:id="@+id/numero2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="50dp">


            </TextView>

            <TextView
                android:id="@+id/numero3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle"

                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="50dp">


            </TextView>

            <TextView
                android:id="@+id/numero4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="50dp">


            </TextView>

            <TextView
                android:id="@+id/numero5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="50dp">


            </TextView>

            <TextView
                android:id="@+id/numero6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle"

                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="50dp">


            </TextView>

            <TextView
                android:id="@+id/numero7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="50dp">


            </TextView>

            <TextView
                android:id="@+id/numero8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="50dp">


            </TextView>

            <TextView
                android:id="@+id/numero9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle"

                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="50dp">


            </TextView>

            <ImageView
                android:id="@+id/borrar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:src="@drawable/undo"
                android:textSize="50dp">


            </ImageView>

            <TextView
                android:id="@+id/numero0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="50dp">


            </TextView>

            <ImageView
                android:id="@+id/enviar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/circle"
                android:src="@drawable/send"
                android:gravity="center"

                >


            </ImageView>
        </GridLayout>

        <LinearLayout
            android:id="@+id/principal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="50dp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/sky"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center|top"

                    android:text="11 : 34"
                    android:textColor="@color/white"
                    android:textSize="40dp">

                </TextView>

                <TextView
                    android:id="@+id/widget2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Monday, May 25"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/llWhatsapp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="150dp"


                    android:background="@drawable/whatsappicono"

                    android:orientation="vertical"

                    ></LinearLayout>

                <LinearLayout
                    android:id="@+id/llBloc"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="150dp"


                    android:background="@drawable/bloc"

                    android:orientation="vertical"

                    ></LinearLayout>
                <LinearLayout
                    android:id="@+id/llSettings"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="150dp"


                    android:background="@drawable/settings"

                    android:orientation="vertical"

                    ></LinearLayout>
                <LinearLayout
                    android:id="@+id/llFiles"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="150dp"


                    android:background="@drawable/file"

                    android:orientation="vertical"

                    ></LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/llLinkedin"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="150dp"


                    android:background="@drawable/linkedinicon"

                    android:orientation="vertical"

                    ></LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
