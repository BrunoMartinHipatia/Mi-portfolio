<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondoSettings"

    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardSettings"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textColor="@color/textoSettings"
                android:textSize="30dp"

                android:background="@color/cardSettings"
                android:text="@string/cambiar_fondo"></TextView>
            <ImageView
                android:id="@+id/changewall"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/changewallpaper"
></ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/principal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:background="@drawable/wallpaper"
            android:orientation="vertical"
            android:visibility="visible"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/hora"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:text="9:30"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/barrarriba"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/barraarriba"
                    android:text="9:30"
                    android:textColor="@color/white">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"

                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/sky"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"
                    android:gravity="center|top"

                    android:text="11 : 34"
                    android:textColor="@color/white"
                    android:textSize="40dp">

                </TextView>

                <TextView
                    android:id="@+id/widget2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Monday, May 25"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llWhatsapp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="80dp"


                    android:background="@drawable/whatsappicono"

                    android:orientation="vertical"

                    ></LinearLayout>

                <LinearLayout
                    android:id="@+id/llBloc"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="80dp"


                    android:background="@drawable/bloc"

                    android:orientation="vertical"

                    ></LinearLayout>

                <LinearLayout
                    android:id="@+id/llSettings"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="80dp"


                    android:background="@drawable/settings"

                    android:orientation="vertical"

                    ></LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>