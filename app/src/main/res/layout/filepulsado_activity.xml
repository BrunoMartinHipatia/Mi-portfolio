        </TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondofilescajas"
        >
        <ListView
            android:id="@+id/lvProyectos"
            android:layout_width="match_parent"
