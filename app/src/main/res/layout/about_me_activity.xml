<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:id="@+id/toolbar"
                android:gravity="center"
                android:text="@string/inicio"
                android:elevation="8dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="125dp"
                android:layout_marginLeft="30dp"
                android:layout_height="125dp"


                android:src="@drawable/yo" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:text=" Bruno Martin"
                android:layout_marginLeft="10dp"
                android:textSize="25dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="100dp"
                android:textColor="@color/black"

                android:text="Hi there, Bruno Martin here, I'm a mobile and web app developer. I create software with an emphasis on efficiency and ease of use  "
                android:textSize="20dp" />


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"

                android:layout_height="300dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="100dp"
                android:textColor="@color/black"
                android:text="I have experience working with Java for slightly over a year now. During this period, I have implemented several projects that helped me gain more skills in building strong applications."
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="100dp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:text="I am currently expanding my knowledge in mobile development by studying Kotlin. This would help me enhance my expertise and keep myself up-to-date with latest industry trends. I'm open to learning new technologies all the time and can handle challenging projects that are able to push the boundaries of my abilities."
                android:textSize="20dp" />
            <androidx.cardview.widget.CardView
               android:backgroundTint="@color/gray"
                android:layout_width="match_parent"


                android:layout_height="match_parent">

                <LinearLayout


                    android:layout_width="wrap_content"
                    android:layout_height="350dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout

                        android:id="@+id/llLinkedin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        >

                        <ImageView
                            android:id="@+id/imgLinkedin"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/linkedin"
                            android:layout_margin="5dp"
                            ></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Linkedin"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="25dp"
                            >

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llInsta"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        >

                        <ImageView
                            android:id="@+id/imgInsta"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/insta"
                            android:layout_margin="5dp"
                            ></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Instagram"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="25dp"
                            >

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llGit"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        >

                        <ImageView
                            android:id="@+id/imgGit"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/git"
                            android:layout_margin="5dp"
                            ></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Github"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="25dp"
                            >

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llWhatsapp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        >

                        <ImageView
                            android:id="@+id/imgTele"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/whatsapp"
                            android:layout_margin="5dp"
                            ></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Whatsapp"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="25dp"
                            >

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>


    <!-- NavigationView para el menÃº lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"

        app:itemIconSize="40dp"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
